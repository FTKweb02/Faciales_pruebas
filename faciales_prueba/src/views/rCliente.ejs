<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro</title>

  <link rel="icon" href="/img/Logo-FTK-new-negro.png">
  <link rel="stylesheet" href="/css/style.css">

</head>

<body>
  <!--Navbar-->
  <div>
    <nav class="color-nav">
      <a href="/">
        <input type="image" id="image" alt="Home" src="/img/Logo-FTK-new-blanco.png" />
      </a>
      <a href="/">
      <button role="link" class="btnCerrar" data-target="/">Cerrar Sesión</button>
      </a>
    </nav>
  </div>
  <br />
  <!--Fin navbar-->
  <!--Contenido-->
  <a href="/ccenter">
  <button class="btnMenu">Menú</button>
  </a>
  <div class="titulo">
    <h1>Registrar Cliente</h1>
  </div>
  <div class="formu">
    <form action="/add" method="post">
      <label><b>Asesor: </b></label>
      <br>
      <select name="Asesor" id="Asesor">
        <option selected="selected" value=""></option>
        <option value="Asesor 1">0001</option>
        <option value="Asesor 2">0002</option>
        <option value="Asesor 3">0003</option>
      </select>
      <br>
      <br>
      <label><b>Marca: </b></label>
      <br/>
      <select name="Marca" id="Marca">
        <option selected="selected" value=""></option>
        <option value="VV">VV</option>
        <option value="OG">OG</option>
        <option value="RC">RC</option>
        <option value="RS">RS</option>
        <option value="VVEXP">VVEXP</option>
      </select>
      <br>
      <br>
      <label><b>Sucursal: </b></label>
      <br />
      <select name="Sucursal" id="Sucursal">
        <option selected="selected" value=""></option>
        <option value="RS01">RS01</option>
        <option value="RC01">RC01</option>
        <option value="VV01">VV01</option>
      </select>
      <br>
      <br>
      
      <input name="Nombre" id="Nombre" type="text" placeholder="Nombre" required>
      <br />
      <br />
      <input name="Apellido" id="Apellido" type="text" placeholder="Apellidos" required>
      <br />
      <br />
      <label><b>Cumpleaños: </b></label>
      <br>
      <br />
      <div class="tratamientoBox">
        <label for="day">Día:</label>&nbsp;<input id="Cumpleaños" type="text" id="day">

        <label for="month">Mes:</label>&nbsp;<input id="Cumpleaños" type="text" id="month" required>

        <label for="year">Año:</label>&nbsp;<input id="Cumpleaños" type="text" id="year">
      </div>
      <br />
      <br />
      <input name="Teléfono" id="Teléfono" type="tel" placeholder="Teléfono 10 digitos" required-pattern="[0-9]{10}">
      <br />
      <br />
      <input name="Email" id="Email" type="email" placeholder="E-mail" required>
      <br />
      <br />
      <div class="col">
        <label for="date"><b>Fecha de Registro:</b></label><br>
        <input type="date" onload="getDate()" class="form-control" id="date" 
          name="date">
      </div>
      <br>
      <br>
      <input name="notas" type="textarea" placeholder="Notas" required>
      <br>
      <br>
      <div>
        <button class="buttonis" type="submit">Guardar</button>
        <button class="buttonis" type="submit"> Guardar&nbsp;y&nbsp;Registrar<br>Membresia</button>
      </div>
    </form>
  </div>
  <!--Fin contenido-->

  <!--Scripts>
  <script>
    function getDate(){
      var today = new Date();
  
  document.getElementById("date").value = today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2);
  }
  </script>
  <--Fin Scripts-->
</body>

</html>