<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro</title>

  <link rel="icon" href="/img/ftk-blanco_solo_logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>

</head>

<body>
  <!--Navbar-->
  <div>
    <nav class="color-nav">
      <a href="/">
        <input type="image" id="image" alt="Home" src="/img/Logo-FTK-new-blanco.png" />
      </a>
      <a href="/">
        <button role="link" class="btnCerrar">Cerrar Sesión</button>
      </a>
    </nav>
  </div>
  <br>
  <!--Fin navbar-->
  <!--Contenido-->
  <button onclick="back();" class="btnMenu">Menú</button>
  <div class="titulo">
    <h1>Registrar Cliente</h1>
  </div>
  <div class="calendar_buttons">
    <a href="/rCliente_vv">
      <button>Vine Vera</button>
    </a>
    <a href="/rCliente">
      <button>Resvera</button>
    </a>
    <a href="/rCliente_og">
      <button>Oro Gold</button>
    </a>
  </div>
  <br><br>

  <div id="RC" class="schedule">
    <h2 class="sch_title">Reserve Cut</h2>
    <div align="center" class="formu">
      <form action="/rCliente/add" method="post">
        <label><b>Asesor: </b></label>
        <br>
        <select name="Asesor" id="Asesor">
          <option disabled selected>Seleccione un asesor</option>
          <% if (rcAs) { %>
            <% for(var i=0; i < rcAs.length; i++) { %>
              <option value="<%= rcAs[i].Nombre %>">
                <%= rcAs[i].Nombre %>
              </option>
              <% } %>
                <% } %>
        </select>
        <br>
        <br>
        <label><b>Marca: </b></label>
        <br>
        <select name="ReserveCut_idReserveCut" id="Marca">
          <option selected value="1">Reserve Cut</option>
        </select>
        <br>
        <br>
        <label><b>Sucursal: </b></label>
        <br>
        <select name="Sucursal" id="Sucursal">
          <option value="RC Polanco">Pasaje Polanco</option>
        </select>
        <br>
        <br>

        <input name="Nombre" id="Nombre" type="text" placeholder="Nombre" required>
        <br>
        <br>
        <input name="Apellidos" id="Apellido" type="text" placeholder="Apellidos" required>
        <br>
        <br>
        <label><b>Cumpleaños: </b></label>
        <br>
        <br>
        <div class="tratamientoBox">
          <label for="Día">Día:</label>&nbsp;<input name="Dia" type="text" id="Día">

          <label for="Mes">Mes:</label>&nbsp;<input name="Mes" type="text" id="Mes" required>

          <label for="Año">Año:</label>&nbsp;<input name="Año" type="text" id="Año">
        </div>
        <br>
        <br>
        <input name="Telefono" id="Telefono" type="tel" placeholder="Teléfono 10 digitos" required-pattern="[0-9]{10}">
        <br>
        <br>
        <input name="Email" id="Correo" type="email" placeholder="E-mail" required>
        <br>
        <br>
        <div class="col">
          <label for="Fecha_registro"><b>Fecha de Registro:</b></label><br>
          <input type="date" class="form-control" id="Fecha_Registro" name="Fecha_Registro">
        </div>
        <br>
        <input name="Notas" type="textarea" placeholder="Notas" required>
        <br>
    </div>
    <br>
    <!-- The Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div align="center" class="modal-content" id="modal_cliente">
        <span class="close">&times;</span>
        <p id="modal-cliente"></p>
        <button type="submit" class="buttonis">Guardar</button>
        <button type="button" id="cancel" class="buttonis">Cancelar</button>
      </div>

    </div>
    </form>
    <div align="center">
      <button class="buttonis" id="myBtn" data-target="#modal_cliente">Resumen</button>
    </div>
    <br><br>
  </div>

  <script type="text/javascript">
    $("#myBtn").click(function () {
      var ases = $("#Asesor").val();
      var marca = $("#Marca").text();
      var suc = $("#Sucursal").text();
      var name = $("#Nombre").val();
      var apell = $("#Apellido").val();
      var day = $("#Día").val();
      var month = $("#Mes").val();
      var year = $("#Año").val();
      var tel = $("#Telefono").val();
      var email = $("#Correo").val();
      var date = $("#Fecha_Registro").val();
      var notes = $("#Notas").val();

      var str = "<h2>Datos ingresados</h2> " + '<br>'
        + "<b>Asesor: </b>" + ases + '<br><br>'
        + "<b>Marca: </b>" + marca + '<br><br>'
        + "<b>Sucursal: </b>" + suc + '<br><br>'
        + "<b>Nombre: </b>" + name + '<br><br>'
        + "<b>Apellidos: </b>" + apell + '<br><br>'
        + "<b>Cumpleaños: </b>" + day + "/" + month + "/" + year + '<br><br>'
        + "<b>Teléfono: </b>" + tel + '<br><br>'
        + "<b>Correo: </b>" + email + '<br><br>'
        + "<b>Fecha de Registro: </b>" + date + '<br><br>'
        + "<b>Notas: </b>" + notes + '<br>'
      $("#modal-cliente").html(str);
    });
  </script>

  <script src="/js/modal.js"></script>
  <script src="/js/back.js"></script>
  <script src="/js/open_schedule.js"></script>

</body>

</html>