    <br><br>
    <label for="fechacompra"><b>Fecha Compra: </b></label><br />
    <input type="date" name="Fecha_Compra" id="Fecha_Compra" required>
    <br><br>
    <div>
      <div class="tratamientoBox">
        <label for=""><b>Tratamiento:</b></label><br><br>
        <label for="nombre">Nombre:</label>&nbsp;<input name="Nombre_T" type="text" id="nombre" required>&nbsp;
        <label for="cat">Categoría:</label>&nbsp;<input name="Categoria_T" type="text" id="cat" required>&nbsp;
        <label for="precio">Precio:</label><input name="Precio_T" value="" readonly>
