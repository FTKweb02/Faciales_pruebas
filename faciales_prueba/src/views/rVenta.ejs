<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Venta</title>

  <link rel="icon" href="/img/Logo-FTK-new-negro.png">
  <link rel="stylesheet" href="/css/style.css">

</head>
<script>
  $('.AddNew').click(function () {
    var row = $(this).closest('Row').clone();
    row.find('input').val('');
    $(this).closest('tr').after(row);
    $('input[type="button"]', row).removeClass('AddNew')
      .addClass('RemoveRow').val('Remove item');
  });

  $('table').on('click', '.RemoveRow', function () {
    $(this).closest('tr').remove();
  });
</script>

<body>
  <div>
    <nav class="color-nav">
      <a href="/">
        <input type="image" id="image" alt="Home" src="/img/Logo-FTK-new-blanco.png" width="150px" />
      </a>
      <button role="link" class="btnCerrar" data-target="/">Cerrar Sesión</button>
    </nav>
  </div>
  <br />
  <div>
    <a href="/">
      <button class="btnMenu">Menú</button>
      </a>
  </div>
  <form action="/addm" method="post">
    <h1 align="center">Registrar Tratamiento</h1>
    <br />
    <div align="center">

      <input size="30" type="search" name="id_Cliente" id="id_Cliente" placeholder="ID Cliente" required>
      <br><br>
      <input size="30" type="text" name="Folio_Membresia" id="Folio_Membresia" placeholder="Folio Membresía" required>
      <br><br>
      <label for="idasesor"><b>Asesor Venta: </b></label><br />
      <input size="30" type="text" name="Asesor" id="Asesor" required>
      <br><br>
      <label for="fechacompra"><b>Fecha Compra: </b></label><br />
      <input type="date" name="Fecha" id="Fecha" required>
      <br><br>
      <div>
        <div class="tratamientoBox">
