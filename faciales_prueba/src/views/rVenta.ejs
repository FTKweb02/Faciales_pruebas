      <br><br>
    </div>
    <label for="acompañante"><b># Acompañantes:</b></label><br />
    <input size="30" type="text" name="Acompañantes" id="Acompañantes" required>
    <br><br>
    <label for="ticketnova"><b># Ticket: </b></label><br />
    <input size="30" type="text" name="Ticket" id="Ticket" required>
    <br><br>
    <label for="importep"><b>Importe Total Ticket: </b></label><br />
    <input size="30" type="text" name="Importe_total" id="Importep" required>
    <br><br>
    <label for="importet"><b>Importe Total Tratamiento/s: </b></label><br />
    <input size="30" type="text" name="Importe_t_tratamiento" id="Importet" required>
    <br><br>
    <div class="tooltip"><img class="tooltip logos" src="img/descuento_icono.png" alt="plus">
      <span class="tooltiptext">Reglas&nbsp;Descuento<br>1. <br>2. <br>3. <br>4. </span>
    </div>&nbsp;&nbsp;&nbsp;&nbsp;
    <label for="descuento"><b>Descuento: </b></label><br>
    <input size="30" type="text" name="Descuento" id="Descuento" required>
    <br><br>

    <label for="observaciones"><b>Notas: </b></label><br />
    <input size="30" type="text" name="Notas" id="Observaciones" required>

  </div>
  <br />
  <div align="center">
    <button class="buttong" type="submit">Registrar</button>
  </div>
  <br />
  </form>
