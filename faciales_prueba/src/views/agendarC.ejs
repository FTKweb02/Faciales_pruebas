      <p>ID&nbsp;Cliente:_____________________________________</p>
      <p>Folio&nbsp;Membresía:______________________________________</p>
      <p>Asesor&nbsp;Venta:____________________________________</p>
      <p>Fecha&nbsp;Compra:____________________________________ </p>
      <p>Tratamiento:__________________________________</p>
      <p>Ticket:________________________________</p>
      <button class="buttonis">Guardar</button>
      <button id="cancel" class="buttonis">Cancelar</button>
    </div>

  </div>
  <script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    //Get the button that closes the modal
    var cancelar = document.getElementById("cancel");

    // When the user clicks the button, open the modal 
    btn.onclick = function () {
      modal.style.display = "block";
    }
    //When the user clicks the button, close the modal
    cancelar.onclick = function () {
      modal.style.display = "none";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  </script>
