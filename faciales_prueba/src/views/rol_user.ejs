<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>

    <link rel="icon" href="/img/ftk-blanco_solo_logo.png">
    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="/css/bootstrap-4.0.0/dist/css/bootstrap-grid.css">

</head>

<body>
    <div>
        <nav class="color-nav">
            <a href="/">
                <input type="image" id="image" alt="Home" src="/img/Logo-FTK-new-blanco.png" width="150px" />
            </a>
            <a href="/">
                <button role="link" class="btnCerrar" data-target="/">Cerrar Sesi√≥n</button>
            </a>
        </nav>
    </div>
    <div class="todo_marca">
        <div class="row">
            <div class="col-8">
                <div>
                    <a href="/config">
                        <img class="home_logo" src="/img/home.jpg" alt="home">
                    </a>
                </div>
                <br>
                <div class="bckgc" style="padding-left: 5vw">
                    <br>
                    <div class="row" style="padding-left: 10vw">
                        <div class="col-6 inputs">
                            <h1>Rol Usuario</h1>
                        </div>
                        <div class="col-6">
                            <a href="/add_rol">
                                <button class="buttoncito">Asignar Rol</button>
                            </a>
                        </div>
                    </div>
                    <table>
                        <thead>
                            <tr class="magia">
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Puesto</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody class="magia inputs">
                            <% if (data) { %>
                                <% for(var i=0; i < data.length; i++) { %>
                                    <tr>
                                        <td align="center"><%= data[i].idUsuarios %></td>
                                        <td><%= data[i].Nombre %></td>
                                        <td><%= data[i].Tipo %></td>
                                        <td align="center"><a href="" style="color: blue">Editar</a></td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
                <br>
            </div>
            <div class="col-4">
                <div class="comoquieras">
                    <img src="/img/color_a.png" alt="grey">
                </div>
            </div>
        </div>
    </div>

</body>

</html>